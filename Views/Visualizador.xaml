<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakCar.Views.Visualizador"
             Title="Visualizador">



    <VerticalStackLayout Padding="20" Spacing="15">

        <Frame BorderColor="#ccc" CornerRadius="10" HasShadow="True" Padding="15">
            <HorizontalStackLayout Spacing="30">

                <VerticalStackLayout Spacing="8" HorizontalOptions="StartAndExpand">
                    <HorizontalStackLayout>
                        <Label Text="ID:" FontSize="20" FontAttributes="Bold" HorizontalOptions="Start" Margin="0,0,5,0"/>
                        <Label x:Name="lblVisId" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Placa:" FontSize="20" FontAttributes="Bold" Margin="0,0,5,0"/>
                        <Label x:Name="lblVisPlaca" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Marca:" FontSize="20" FontAttributes="Bold" Margin="0,0,5,0"/>
                        <Label x:Name="lblVisMarca" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Modelo:" FontSize="20" FontAttributes="Bold" Margin="0,0,5,0"/>
                        <Label x:Name="lblVisModelo" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Cor:" FontSize="20" FontAttributes="Bold" Margin="0,0,5,0"/>
                        <Label x:Name="lblVisCor" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="8" HorizontalOptions="End">
                    <HorizontalStackLayout>
                        <Label Text="Nome do Proprietário:" FontSize="20" FontAttributes="Bold" Margin="0,0,5,0"/>
                        <Label x:Name="lblVisNomeProprietario" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Tipo de Pagamento:" FontSize="20" FontAttributes="Bold" Margin="0,0,5,0"/>
                        <Label x:Name="lblVisTipo" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Data de Entrada:" FontSize="20" FontAttributes="Bold" Margin="0,0,5,0"/>
                        <Label x:Name="lblDataHoraEntrada" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Data de Saída:" FontSize="20" FontAttributes="Bold" Margin="0,0,5,0"/>
                        <Label x:Name="lblDataHoraSaida" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Status do Pagamento:" FontSize="20" FontAttributes="Bold" Margin="0,0,5,0"/>
                        <Label x:Name="lblStatusPagamento" FontSize="20" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

            </HorizontalStackLayout>
        </Frame>

    </VerticalStackLayout>

</ContentPage>
    
    